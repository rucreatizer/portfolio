                                svg(viewBox='0 0 110 110').circles
                                    circle(r="45" cx="50%" cy="50%" fill="none").circle__first 
                                    circle(r="45" cx="50%" cy="50%"  transform="rotate(-90 55 55)").circle__second.circle-15 
                                span.skills__text Git                               
                            li.skill__item
                                svg(viewBox='0 0 110 110').circles
                                    circle(r="45" cx="50%" cy="50%" fill="none").circle__first 
                                    circle(r="45" cx="50%" cy="50%"  transform="rotate(-90 55 55)").circle__second.circle-15 
                                span.skills__text Gulp                               
                            li.skill__item                   
                                svg(viewBox='0 0 110 110').circles
                                    circle(r="45" cx="50%" cy="50%" fill="none").circle__first 
                                    circle(r="45" cx="50%" cy="50%"  transform="rotate(-90 55 55)").circle__second.circle-15 
                                span.skills__text Bower
        .section__map
            .map(id="map") 
            script.
                function initMap() {
                    var uluru = {lat: -25.363, lng: 131.044};
                    var map = new google.maps.Map(document.getElementById('map'), {
                    zoom: 4,
                    center: uluru
                        });
                    var marker = new google.maps.Marker({
                    position: uluru,
                    map: map
                        });
                }
            script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD-AKKh5WXT8En9jaGyoJGGY4qzBmPo8BE&callback=initMap") 
            .map__info
                span.auth__title.map__title контакты
                ul.contacts__list
                    li.contact__item
                        +svg('social__item contact__image', 'skype')
                        a(href="#").contact__title creatizer.ru
                    li.contact__item
                        +svg('social__item contact__image', 'envelope')
                        a(href="#").contact__title info@creatizer.ru
                    li.contact__item
                        +svg('social__item contact__image', 'phone')
                        a(href="#").contact__title +7 351 777 1 757
                    li.contact__item
                        +svg('social__item contact__image', 'map_n')
                        address(href="#").contact__title г. Челябинск, ул. Кудрявцева 38, оф. 3                                                                        
            include ../common/footer.pug
